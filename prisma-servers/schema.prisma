generator client {
  provider = "prisma-client-js"
  output   = "../prisma-servers/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("SERVER_DATABASE_URL")
}

enum ServerType {
  OFFICIAL
  TEST
  CLIENT
}

model Server {
  serverId    Int         @id
  timeAdded   BigInt
  serverType  ServerType

  packages    String[]
}