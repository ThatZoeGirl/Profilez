generator client {
  provider = "prisma-client-js"
  output   = "../prisma-profiles/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("USER_DATABASE_URL")
}

enum Clearance {
  OWNER
  ADMIN
  MODERATOR
  USER
  MUTED
  BANNED
}

model Profile {
  userId      Int         @id
  timeCreated BigInt
  clearance   Clearance
  
  nickname    String?
  description String?     @db.Text
  boundries   Json[]      @db.JsonB

  ratingCol   Int[]
  ratingTot   Int
  ratingPos   Int
  ratingNeg   Int
  ratingNut   Int

  warnings    Json[]      @db.JsonB
}