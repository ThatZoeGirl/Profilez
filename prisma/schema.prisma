generator client {
  provider = "prisma-client-js"
  output   = "../prisma/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("RAPHAEL_DB_URL")
}

enum StaffType {
  OWNER
  ADMIN
  STAFF
}

enum PoolType {
  OFFICIAL
  FEATURED
  FREE
  BANNED
}

model Staff {
  id          BigInt    @unique
  created     BigInt
  type        StaffType
}

model Pool {
  id          BigInt    @unique
  created     BigInt
  type        PoolType
  owner       Int[]     @unique
  admin       Int[]     @unique
  staff       Int[]     @unique
  server      Json[]
  warning     Json[]
  ban         Json[]
}